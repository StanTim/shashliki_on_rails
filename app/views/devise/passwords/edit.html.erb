<h2><%= t(".change_your_password") %></h2>

<%= form_for(@user, as: @user, url: password_path(@user), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, t(".new_password"), class: "col-form-label mb-1", style: "thumbnail-inner" %><br/>
    <em><%= show_min_pass_characters %></em>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, t(".confirm_new_password"), class: "col-form-label mb-1",
                style: "thumbnail-inner" %><br/>
    <div class="col-sm-6">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-6"><br/>
      <%= f.submit t(".change_my_password"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

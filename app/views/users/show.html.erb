<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user) %>

  <% if @user == current_user %>
    <p class="buffer-top"><%= link_to t("edit_user"),
                                      edit_user_registration_path(current_user), class: "btn btn-success" %></p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= t("organized") %></h3>
        <div class="row">
          <%= render partial: "events/event", collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top"><p> <%= t("have_not_any_events") %></p></p>
      <% end %>
    </div>
  </div>
</div>

<div class="card" style="width: 18rem;">
  <% @users.uniq.each do |user| %>
    <%= image_tag user_avatar(user) %>
    <div class="card-body">
      <h5 class="card-title"><%= user.name %></h5>
      <p class="card-text">с нами с: <%= user.created_at %>"</p>
      <a href="<% events_path %>" class="btn btn-primary">Создал событий: <%= user.events.count %></a>
    </div>
  <% end %>
</div>

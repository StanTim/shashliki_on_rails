<%= form_for [@event, subscription] do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: subscription } %>

  <% unless user_signed_in? %>
    <div class='form-group'>
      <%= f.label t('activerecord.attributes.subscription.name')%>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label t('activerecord.attributes.subscription.email') %>
      <%= f.text_field :user_email, class: 'form-control' %>
    </div>
  <% end %>

  <div class='actions'>
    <%= f.submit t('subscribe'), class: 'btn btn-primary' %>
  </div>
<% end %>
